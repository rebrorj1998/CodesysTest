msgs = system.get_message_objects("{97F48D64-A2A3-4856-B640-75C046E37EA9}")
for msg in msgs:
	if str(msg.severity) == "Warning":
		sSAinfo = sSAinfo + msg.prefix + str(msg.number) + ":\t" + msg.object.get_name() + ":\t"  + msg.text + ".&lt;br/&gt;  "

